<% provide(:title, "#{@article.title} | Cas van der Hoven") %>
<div class="article-preview article-<%= @article.category %>">
  <h2 class="date"><%= @article.created_at.strftime("%A, %B %e") %></h2>
  <h1 class="title"><%= @article.title %></h1>
  <span class="category tag-<%= @article.category %>"><%= @article.category %></span>
  <p><%= markdown @article.content %></p>
</div>

<div class="menu">
  <div class="menu-item box-1">
    <%= link_to articles_path do %>
      <h2><%= icon('book') %>
      <span class="span-2">blog</span>
    <% end %>
  </div>
  <div class="menu-item box-2">
    <%= link_to edit_article_path do %>
      <h2><%= icon('pencil') %>
      </h2>
    <% end %>
      </h2>
  </div>
  <div class="menu-item box-3">
    <h2>
      <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } do %>
      <h2><%= icon('trash') %>
      </h2>
    <% end %>
    </h2>
  </div>
  <div class="menu-item box-4">
    <%= link_to sign_in_path do %>
      <h2><%= icon('sign-in') %>
      <span class="span-4">Log in</span>
      </h2>
    <% end %>
  </div>
</div>
