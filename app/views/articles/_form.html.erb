  <%= simple_form_for @article do |f| %>
    <% if @article.errors.any? %>
      <h2><%= pluralize(@article.errors.count, "error") %> prevented this article from saving:</h2>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= f.input :title %>
    <%= f.input :category, collection: ["programming", "personal", "professional"] %>
    <%= f.input :content %>
    <%= f.button :submit %>
  <% end %>
