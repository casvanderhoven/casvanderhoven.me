<%= simple_form_for @project do |f| %>
  <% if @project.errors.any? %>
    <h2><%= pluralize(@project.errors.count, "error") %> prevented this project from saving:</h2>
    <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :link %>
    <%= f.input :image, as: :file %>
    <%= f.button :submit %>
  <% end %>
